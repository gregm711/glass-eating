# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 999999999

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size =

[*.json]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4

[*.scss]
indent_style = tab
indent_size = 4

[*.jsx]
indent_style = tab
indent_size = 4
